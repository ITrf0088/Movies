<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="400dp"
    android:layout_marginVertical="10dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp">

        <TextView
            android:id="@+id/genre_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_bold"
            android:maxLines="2"
            android:textSize="20sp"
            tools:text="Family" />

        <ImageView
            android:id="@+id/more_pointer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:contentDescription="@string/more_movies"
            android:src="@drawable/ic_pointer_more" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false" />

        <include
            android:id="@+id/shimmer_layout"
            layout="@layout/genre_shimmer" />

    </FrameLayout>


    <Spinner
        android:id="@+id/spinner_sort_by"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:dropDownWidth="200dp"
        android:dropDownVerticalOffset="40dp"
        android:entries="@array/sort_by"
        android:popupBackground="@drawable/shimmer_item_bg" />

</LinearLayout>
